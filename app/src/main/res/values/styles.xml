<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InfoTextStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/neon_cyan</item>
    <item name="android:fontFamily">@font/audiowide</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="StatLabelStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neon_green</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StatValueStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:gravity">center</item>
    </style>
</resources>