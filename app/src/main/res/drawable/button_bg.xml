<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/dark_disabled"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient android:startColor="@color/primary" android:endColor="@color/primary_dark" android:angle="90"/>
            <padding android:left="16dp" android:right="16dp" android:top="12dp" android:bottom="12dp"/>
        </shape>
    </item>
</selector>
